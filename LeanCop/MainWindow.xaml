<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="LeanCop.MainWindow"
        Title="LeanCop" Height="350" Width="525">
    <Grid>
        <Button x:Name="drawButton" Content="Rysuj" Margin="432,0,0,10" HorizontalAlignment="Left" Width="75" Height="20" VerticalAlignment="Bottom" Click="drawButton_Click"/>
        <TextBox x:Name="matrixTextbox" Margin="10,0,0,10" TextWrapping="Wrap" Text="[[q],[-q,r],[-r]]" HorizontalAlignment="Left" Width="191" Height="20" VerticalAlignment="Bottom"/>
        <TextBox x:Name="connectionTextbox" TextWrapping="Wrap" Text="[[(0,0),(1,0)],[(1,1),(2,0)]]" Margin="206,0,0,10" HorizontalAlignment="Left" Width="221" Height="20" VerticalAlignment="Bottom"/>
        <ScrollViewer Margin="10,10,10,35" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Canvas x:Name="canvas" Margin="0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        </ScrollViewer>

    </Grid>
</Window>
